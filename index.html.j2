<html>
  <head>
    <title>json formatter</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/gh/kognise/water.css@latest/dist/light.min.css">
    <style type="text/css">
    <!--
    textarea.json {font-family: monospace;}
    -->
    </style>
  </head>
  <body>
    <h1>json formatter</h1>
    <h2>input</h2>
    <form action="/" method="post">
      <textarea name="in" cols=80 rows=10 autofocus class="json">{{ in }}</textarea>
      <input type="submit">
    </form>
    <h2>output</h2>
    <textarea cols=80 rows=10 class="json">{{ out }}</textarea>
  </body>
</html>
